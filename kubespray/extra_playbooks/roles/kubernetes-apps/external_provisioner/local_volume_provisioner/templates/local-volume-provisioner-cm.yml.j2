---
apiVersion: v1
kind: ConfigMap
metadata:
  name: local-volume-provisioner
  namespace: {{ local_volume_provisioner_namespace }}
data:
  storageClassMap: |
{% for class in local_volume_provisioner_storage_classes %}
    {{ class.name }}:
      hostDir: {{ class.host_dir }}
      mountDir: {{ class.mount_dir }}
{% endfor %}